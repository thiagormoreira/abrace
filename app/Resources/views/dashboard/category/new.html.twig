{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Categoria <small>Editar categoria</small></h4>
        </div>
    </div>
    {{ form_start(form, {
        'attr': {
            'class': 'form-horizontal'
        }
    }) }}
    <!-- .row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <div class="form-group">
                    <div class="form-group">
                        {{ form_label(form.name, null, {
                            'label': 'Categoria: ',
                            'label_attr': {
                                'class': 'control-label'
                            }
                        }) }}
                        {{ form_widget(form.name, {
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description, null, {
                            'label': 'Status do artigo: ',
                            'label_attr': {
                                'class': 'control-label'
                            }
                        }) }}
                        {{ form_widget(form.description, {
                            'attr': {
                                'class': 'form-control',
                            }
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
    <!-- .row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <div class="form-group">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="{{ path('category_index') }}">Voltar</a>
                        </li>
                        <li>
                            <input type="submit" class="btn btn-primary"
                                   value="Salvar" />
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}