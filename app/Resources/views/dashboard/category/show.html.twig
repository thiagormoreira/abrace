{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Categoria <small>Ver categoria</small></h4>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Title</h3>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">
                            <table class="table table-striped table-bordered">
                                <tbody>
                                <tr>
                                    <th><span class="pull-right">Id</span></th>
                                    <td>{{ category.id }}</td>
                                </tr>
                                <tr>
                                    <th><span class="pull-right">Nome</span></th>
                                    <td>{{ category.name }}</td>
                                </tr>
                                <tr>
                                    <th><span class="pull-right">Descri√ßao</span></th>
                                    <td>{{ category.description }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="white-box">
                <div class="form-group">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="{{ path('category_index') }}">Voltar</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger">
                                Apagar
                            </button>
                            {{ form_end(delete_form) }}
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}">
                                <button type="button" class="btn btn-primary">
                                    Editar
                                </button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.content -->
{% endblock %}

