{% extends 'frontend.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <article class="post">
                <div class="post-thumb">
                    <a href="#"><img src="{{ asset('frontend/images/blog-1.jpg') }}" alt=""></a>
                </div>
                <div class="post-content">
                    <header class="entry-header text-center text-uppercase">
                        <h6><a href="#">{% for category in post.category %}{{ category.name }}{% endfor %}</a></h6>

                        <h1 class="entry-title"><a href="#">{{ post.title }}</a></h1>


                    </header>
                    <div class="entry-content">
                        {{ post.text | raw }}
                    </div>
                    <div class="decoration">
                        {% for tag in post.tag %}
                            <a href="#" class="btn btn-default">{{ tag.name }}</a>
                        {% endfor %}
                    </div>

                    <div class="social-share">
							<span class="social-share-title pull-left text-capitalize">Por Admin em {{ post.createDate|date("F d \\, Y") }}</span>
                        <ul class="text-center pull-right">
                            <li><a class="s-facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a class="s-twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a class="s-google-plus" href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a class="s-linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a class="s-instagram" href="#"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </article>
        </div>
        {% include('sidebar.frontend.html.twig') %}
    </div>
    <!-- end main content-->
{% endblock %}
